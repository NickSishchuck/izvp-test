{
    // Application settings for Test.Api
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "Microsoft.AspNetCore": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
                    "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] {SourceContext,-20} {Message:lj}{NewLine}{Exception}"
                }
            }
        ],
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithThreadId"
        ],
        "Properties": {
            "Application": "Test.Api"
        }
    },
    "Cors": {
        "AllowedOrigins": [
            "http://localhost:5000"
        ]
    },
    "TestPath": "TestJson/MainTest/test.json",
    "TestResultsPath": "TestJson/UserTestsResults/testResults.json",
    "AdminSettings": {
        "Username": "admin",
        "Password": "supersecret123",
        "Token": "generated-admin-jwt-token"
    }
}
