:80 {
    # Reverse proxy API requests to backend
    handle /api/* {
        reverse_proxy backend:5000
    }
    
    # Serve static files for everything else
    handle {
        root * /srv
        encode gzip
        file_server
        try_files {path} /index.html
    }
    
    log {
        output stdout
        format console
    }
}
